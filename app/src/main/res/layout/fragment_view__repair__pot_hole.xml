<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".View_Repair_PotHole">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_Street"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView_Address"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView_Description"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>
            <ImageView
                android:id="@+id/imageView_severity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/red_sad">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_Repair_Pothole"
                android:layout_width="170dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Green_Repair"
                android:text="@string/button_Repair_Pothole" />

            <Button
                android:id="@+id/button_View_Pothole"
                android:layout_width="170dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Blue_View"
                android:text="@string/button_View_Pothole" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>